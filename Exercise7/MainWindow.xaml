<Window x:Class="Exercise7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exercise7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="tblkNumber" HorizontalAlignment="Left" Margin="368,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Width="75"/>
        <Button x:Name="btnPlus" Content="Plus" HorizontalAlignment="Left" Margin="274,187,0,0" VerticalAlignment="Top" Width="75" Click="btnPlus_Click"/>
        <Button x:Name="btnMinus" Content="Minus" HorizontalAlignment="Left" Margin="464,187,0,0" VerticalAlignment="Top" Width="75" Click="btnMinus_Click"/>
        <TextBox x:Name="tbxStartValue" HorizontalAlignment="Left" Height="23" Margin="348,91,0,0" TextWrapping="Wrap" Text="Enter A Number" VerticalAlignment="Top" Width="120" GotFocus="tbxStartValue_GotFocus"/>
        <Button x:Name="btnSet" Content="Set Number" HorizontalAlignment="Left" Margin="368,128,0,0" VerticalAlignment="Top" Width="75" Click="btnSet_Click"/>

    </Grid>
</Window>

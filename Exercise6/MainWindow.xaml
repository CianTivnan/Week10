        xmlns:local="clr-namespace:Exercise6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbxInput" HorizontalAlignment="Left" Height="23" Margin="345,73,0,0" TextWrapping="Wrap" Text="Enter Number Here" VerticalAlignment="Top" Width="120" GotFocus="tbxInput_GotFocus"/>
